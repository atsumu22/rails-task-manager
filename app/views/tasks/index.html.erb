<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= task.completed %> <%= link_to task.title, task %> - <i class="fa-solid fa-trash-can"><%= link_to 'DELETE', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></i></li>
  <% end %>
</ul>

<%= link_to 'Add your new task', new_task_path %>
